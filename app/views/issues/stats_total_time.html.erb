<div id="content">
<h2>Tiempo dedicado en '<%= @issue.subject %>'</h2>

<% Role.all.each do |role| %>
	<% if @stats_time.map{|s| s[:role]}.include?(role.name) && !role.tee_timetables.empty?%>
		<fieldset>
		<legend><h3><u><%= role.name.capitalize %></h3></u></legend>
			<div class="total-hours">Total: <span class="hours hours-int"><%= ((@time_by_roles[role.name].to_f * 10).floor / 10.0) %></span> hora(s)</div>
			<div class="autoscroll">
			<table class="list">
				<thead>
					<tr>
						<th>Estado</th>
						<th>Usuario</th>
						<th>Fecha Inicio</th>
						<th>Fecha Fin</th>
						<th>Tiempo</th>
					</tr>
				</thead>
				<tbody>
					<% @stats_time.each do |row| %>
						<% if row[:role] == role.name %>
							<tr class="time-entry <%= cycle("odd", "even") %>" style="text-align: center">
							<td style="text-align: center"><%= row[:status] %></td>
							<td style="text-align: center"><%= row[:user] %></td>
							<td style="text-align: center"><%= row[:start].strftime("%d-%m-%Y %H:%M:%S") %></td>
							<td style="text-align: center"><%= row[:end].strftime("%d-%m-%Y %H:%M:%S") %></td>
							<td style="text-align: center"><%= row[:time] %></td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
			</div>
		</fieldset><br>
	<% end %>

<% end %>

<%= button_to l(:text_back), issue_path(@issue), style: "margin-left: 5px;", :method => :get %>
</div>
