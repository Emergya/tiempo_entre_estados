<div id="content">
<h2>Tiempo dedicado en la petici√≥n</h2>

<% Role.all.each do |role| %>

	<% if @stats_time.map{|s| s[:role]}.include?(role.name) %>
		<h3><%= role.name.capitalize %></h3>
		<div class="total-hours">Total: <span class="hours hours-int"><%=  @time_by_roles[role.name] %></span> hora(s)</div>
		<div class="autoscroll">
		<table class="list">
			<thead>
				<tr>
					<th>Estado</th>
					<th>Fecha Inicio</th>
					<th>Fecha Fin</th>
					<th>Horas</th>
				</tr>
			</thead>
			<tbody>
				<% @stats_time.each do |row| %>
					<% if row[:role] == role.name %>
						<tr class="time-entry <%= cycle("odd", "even") %> hascontextmenu" style="text-align: center">
						<td class="buttons" style="text-align: center"><%= row[:status] %></td>
						<td class="buttons" style="text-align: center"><%= row[:start].strftime("%d-%m-%Y %H:%M:%S") %></td>
						<td class="buttons" style="text-align: center"><%= row[:end].strftime("%d-%m-%Y %H:%M:%S") %></td>
						<td class="buttons" style="text-align: center"><%= row[:time] %></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
		</div>
	<% end %>

<% end %>

</div>
